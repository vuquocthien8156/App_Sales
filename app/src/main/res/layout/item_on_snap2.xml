<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardOnSnap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layoutItemOnSnapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_item_main"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgItemOnSnapp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/txtTenSanPhamm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="Tên Sản Phẩm"
            android:lines="2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtGiaItemOnSnapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:padding="2dp"
            android:textColor="#ff4c4c"
            android:textStyle="bold"
            android:text="Giá"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>